@model myoung_Portfolio2222.Models.EmailModel

@using (Html.BeginForm("Contact","Home", FormMethod.Post))
{     @Html.AntiForgeryToken()
	<h4>Send me a message.</h4>
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.FromName)
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "example@email.com" })
			@Html.ValidationMessageFor(m => m.FromEmail)
		</div>
	</div>
	<div class="col-sm-12">
		<textarea name="body" id="body" class="form-control margin-b-20" rows="5" placeholder="Message...."></textarea>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" value="Send" />
		</div>

	</div> }
